    y: 200, // empieza más abajo
    opacity: 0, // invisible al inicio
    duration: 1.4, // tiempo del efecto
    ease: "power4.out", // un pequeño retraso elegante
  });

  gsap.to("#divimg", {
    scrollTrigger: {
      trigger: "#seccion1",
