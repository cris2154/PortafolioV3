<script type="module">
    import gsap from "gsap";
    import { ScrollToPlugin } from "gsap/ScrollToPlugin";
    gsap.registerPlugin(ScrollToPlugin);

    document.addEventListener('DOMContentLoaded', () => {
        const toggle = document.getElementById('nav-toggle');
        const menu = document.getElementById('mobile-menu');
        const navLinks = document.querySelectorAll('.nav-links a, #mobile-menu a');
        const shell = document.querySelector('.nav-shell');
        const brand = document.querySelector('.nav-brand');
        const cta = document.querySelector('.nav-cta');
        if (!toggle || !menu || !shell) return;

        // Toggle mobile
        toggle.addEventListener('click', () => {
            const isHidden = menu.classList.toggle('hidden');
            toggle.setAttribute('aria-expanded', String(!isHidden));
        });

        // Smooth scroll con GSAP ScrollTo
        const scrollToTarget = (target) => {
            if (!target) return;
            // Usa GSAP ScrollTo si estÃ¡ disponible, si no, nativo smooth
            if (ScrollToPlugin) {
                gsap.to(window, { duration: 0.8, scrollTo: { y: target, offsetY: 80 }, ease: "power2.inOut" });
            } else {
                target.scrollIntoView({ behavior: "smooth", block: "start" });
                window.scrollBy({ top: -80, behavior: "instant" });
            }
        };

        navLinks.forEach((link) => {
            link.addEventListener('click', (e) => {
                const href = link.getAttribute('href');
                if (href && href.startsWith('#')) {
                    e.preventDefault();
                    const target = document.querySelector(href);
                    scrollToTarget(target);
                }
                menu.classList.add('hidden');
                toggle.setAttribute('aria-expanded', 'false');
            });
        });

        // TL de entrada (ajusta duraciones/offsets a gusto)
        const tl = gsap.timeline({ defaults: { ease: "power3.out", duration: 0.6 } });
        tl.from(shell, { y: -30, opacity: 0 })
          .from(brand, { y: -20, opacity: 0 }, "-=0.35")
          .from(".nav-links a", { y: -10, opacity: 0, stagger: 0.08 }, "-=0.35")
          .from(cta, { scale: 0.9, opacity: 0 }, "-=0.3")
          .from(".nav-toggle", { scale: 0.9, opacity: 0 }, "-=0.45");
    });
</script>
