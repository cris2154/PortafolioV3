 <script>
        import { gsap } from 'gsap';
        const container = document.getElementById('stack');
        const cards = document.querySelectorAll('.card');
        const clickIndicator = document.getElementById('clickIndicator');
        
        let current = 1;
        let isAnimating = false;
        const totalCards = cards.length;

        // Animación del indicador de click
        gsap.to(clickIndicator, {
            y: -5,
            duration: 0.8,
            repeat: -1,
            yoyo: true,
            ease: "power1.inOut"
        });

        // Función para reiniciar el stack automáticamente
        function resetStack() {
            isAnimating = true;

            // Reiniciar todas las cartas
            cards.forEach((card, index) => {
                const layer = parseInt(card.dataset.layer);
                const offset = (layer - 1) * 8;
                const scale = 1 - (layer - 1) * 0.02;
                
                card.style.pointerEvents = 'auto';
                card.style.zIndex = totalCards - layer + 1;
                
                gsap.fromTo(card,
                    { y: -80, opacity: 0, scale: 0.9 },
                    { 
                        y: offset,
                        opacity: 1,
                        scale: scale,
                        duration: 0.6,
                        delay: index * 0.1,
                        ease: "back.out(1.5)"
                    }
                );
            });

            setTimeout(() => {
                current = 1;
                isAnimating = false;
            }, 800);
        }

        // Click en el stack
        container.addEventListener('click', (e) => {
            if (isAnimating) return;

            // Si ya se mostraron todas, reiniciar automáticamente
            if (current > totalCards) {
                resetStack();
                return;
            }

            isAnimating = true;
            
            const currentCard = document.querySelector(`[data-layer="${current}"]`);
            if (!currentCard) return;

            // Animar la carta actual hacia arriba
            gsap.to(currentCard, {
                y: -80,
                opacity: 0,
                scale: 0.9,
                duration: 0.6,
                ease: "power3.inOut",
                onComplete: () => {
                    currentCard.style.pointerEvents = 'none';
                    
                    // Si llegamos a la última carta, reiniciar automáticamente después de 0.5s
                    if (current >= totalCards) {
                        setTimeout(() => {
                            resetStack();
                        }, 500);
                    } else {
                        isAnimating = false;
                    }
                }
            });

            current++;
        });
    </script>
