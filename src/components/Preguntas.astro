<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const accordionGroup = document.querySelector('[data-accordion="default-accordion"]');

    if (!accordionGroup) return;

    const accordions = accordionGroup.querySelectorAll('.accordion');

    const setAccordionState = (accordion, shouldOpen) => {
      const button = accordion.querySelector('.accordion-toggle');
      const content = accordion.querySelector('.accordion-content');

      accordion.classList.toggle('active', shouldOpen);

      if (button) {
        button.setAttribute('aria-expanded', shouldOpen ? 'true' : 'false');
      }

      if (content) {
        content.style.maxHeight = shouldOpen ? `${content.scrollHeight}px` : '0px';
        content.classList.toggle('active', shouldOpen);
      }
    };

    accordions.forEach((accordion) => {
      const button = accordion.querySelector('.accordion-toggle');

      if (!button) return;

      button.addEventListener('click', () => {
        const isOpen = accordion.classList.contains('active');

        accordions.forEach((otherAccordion) => {
          if (otherAccordion !== accordion) {
            setAccordionState(otherAccordion, false);
          }
        });

        setAccordionState(accordion, !isOpen);
      });

      const defaultOpen = accordion.classList.contains('active');

      setAccordionState(accordion, defaultOpen);
    });
  });
</script>
